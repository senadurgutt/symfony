{% extends 'adminbase.html.twig' %}
{% block title %}Kategori Detayı{% endblock %}
{% block body %}
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>Kategori Detayı
                <small><a href="{{ path('category_new')  }}">Kategori ekle </a></small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="#">Examples</a></li>
                <li class="active">bıdıbıdıbıd page</li>
            </ol>
        </section>
        <!-- Main content -->
        <section class="content">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Kategori Bilgileri</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-bordered">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ category.id }}</td>
                        </tr>
                        <tr>
                            <th>Parent_id</th>
                            <td>{{ category.parentId }}</td>
                        </tr>
                        <tr>
                            <th>Title</th>
                            <td>{{ category.title }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ category.description }}</td>
                        </tr>
                        <tr>
                            <th>Category</th>
                            <td>{{ category.category }}</td>
                        </tr>
                        </tbody>
                    </table>

                    <a href="{{ path('category_index') }}">back to list</a>

                    <a href="{{ path('category_edit', {'id': category.id}) }}">edit</a>

                    {{ include('admin/category/delete.html.twig') }}
                </div><!-- /.box-body -->
            </div><!-- /.box -->

