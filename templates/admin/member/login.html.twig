{% extends 'adminbase.html.twig' %}

{% block title %}Kullanıcı Girişi{% endblock %}

{% block body %}

    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Kullanıcı Girişi
                <small><a href="{{ path('register') }}">Kayıt Ol</a></small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="#">Examples</a></li>
                <li class="active">Giriş Sayfası</li>
            </ol>
        </section>

        <section class="content">

            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Kullanıcı Girişi</h3>
                </div><!-- /.box-header -->
                <!-- form start -->
                <form role="form" method="post" action="{{ path('login_check') }}">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email Adresi</label>
                            <input type="email" name="_username" class="form-control" id="_username" placeholder="Email Adresi" required>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Şifre</label>
                            <input type="password" name="_password" class="form-control" id="_password" placeholder="Şifre" required>
                        </div>
                    </div><!-- /.box-body -->

                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Giriş Yap</button>
                        <a href="{{ path('register') }}" class="btn btn-default">Kayıt Ol</a>
                    </div>
                </form>
            </div>
        </section>

        <!-- Main content -->
        <section class="content">

            <div class="box">
                <div class="box-footer clearfix">
                    <ul class="pagination pagination-sm no-margin pull-right">
                        <li><a href="#">&laquo;</a></li>
                        <li><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">&raquo;</a></li>
                    </ul>
                </div>
            </div><!-- /.box -->

        </section><!-- /.content -->
    </div><!-- /.content-wrapper -->

{% endblock %}
