{% extends 'adminbase.html.twig' %}

{% block title %}Ürün Düzenleme{% endblock %}

{% block body %}
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Ürün Düzenleme
                <small><a href="{{ path('product_index') }}">Ürünler</a></small>
            </h1>
        </section>
        <section class="content">
            {% for label, messages in app.flashes %}
                <div class="alert alert-{{ label }}">
                    {% for message in messages %}
                        {{ message }}
                    {% endfor %}
                </div>
            {% endfor %}
            <div class="box box-primary">
                <!-- form start -->
                {{ form_start(form, {'attr': {'role': 'form', 'method': 'post'}}) }}
                <div class="box-body">
                    {{ form_row(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Title'}}) }}
                    {{ form_row(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Description'}}) }}
                    {{ form_row(form.member, {'attr': {'class': 'form-control'}}) }}
                    {{ form_row(form.image, {'attr': {'class': 'form-control'}}) }}
                    {{ form_row(form.category, {'attr': {'class': 'form-control'}}) }}
                </div><!-- /.box-body -->

                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a href="{{ path('product_index') }}">back to list</a>
                </div>
                {{ form_end(form) }}
                {{ include('admin/product/_delete_form.html.twig') }}
            </div>
        </section>
        <!-- Main content -->
        <section class="content">
            <div class="box">
                <div class="box-footer clearfix">
                    <ul class="pagination pagination-sm no-margin pull-right">
                        <li><a href="#">&laquo;</a></li>
                        <li><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">&raquo;</a></li>
                    </ul>
                </div>
            </div><!-- /.box -->
        </section><!-- /.content -->
    </div><!-- /.content-wrapper -->
{% endblock %}

