{% block body %}
    <h1>{{ product.title }}</h1>

    <form action="{{ path("product_iupdate", {'id': product.id}) }}" method="post" enctype="multipart/form-data">
        Select image to upload:
        <input type="file" name="image" id="fileToUpload">
        <input type="submit" value="Upload Image" name="submit">
    </form>

    {% if product.image %}
        <div>
            <img src="{{ asset(product.image) }}" alt="New Product Image" style="width: 300px; height: auto;">
        </div>
    {% endif %}
{% endblock %}